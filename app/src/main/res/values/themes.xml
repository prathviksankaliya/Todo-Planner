<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/whiteDark</item>
        <item name="colorPrimaryVariant">@color/whiteDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/whiteDark</item>
        <item name="colorSecondaryVariant">@color/whiteDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="progressbar">
        <item name="colorSecondary">@color/whiteDark</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle"> @style/Modal</item>
    </style>
    
    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background" > @drawable/deletesheet_box</item>
    </style>

</resources>